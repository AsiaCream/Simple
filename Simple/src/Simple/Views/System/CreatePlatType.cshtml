<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">添加平台类型</p>
                        <form id="defaultForm" asp-action="CreatePlatType" asp-controller="System" method="post">
                            <table class="table table-responsive table-stripted">
                                <tbody>
                                    <tr>
                                        <th class="must2">*平台类型</th>
                                        <td class="form-group"><input type="text" class="form-control" name="Title" /></td>
                                    </tr>
                                    <tr>
                                        <th><a asp-action="PlatType" asp-controller="System" class="form-control btn btn-primary">返回平台类型列表</a></th>
                                        <th><input type="submit" class="form-control btn btn-primary" value="添加"></th>
                                    </tr>
                                </tbody>
                            </table>

                        </form>
                        <label class="must2">例子</label><br />
                        <label class="must2">
                            平台类型：Ebay<br />
                        </label><br />
                        <div style="height:10px;"></div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
<script src="~/js/jQuery-2.1.4.min.js"></script>
<script>
    $(function () {
        $('#defaultForm').bootstrapValidator({
            message: '这个值没有被验证',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                Title: {
                    message: '平台类型还没有验证',
                    validators: {
                        notEmpty: {
                            message: '平台类型不能为空'
                        }
                    }
                }
            }
        })

    });
</script>


