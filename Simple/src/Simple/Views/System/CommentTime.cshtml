@model IEnumerable<CommentTime>
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">评价时间管理</p>
                        <table class="table table-responsive table-stripted table-hover">
                            <thead>
                                <tr class="table-title">
                                    <th>序号</th>
                                    <th>当前评价时间</th>
                                    <th>当前备注</th>
                                    <th>可操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CommentTime x in Model)
                                {
                                    <tr>
                                        <td>@x.Id</td>
                                        <td>@x.Date </td>
                                        <td>@x.Note </td>
                                        <td><a asp-action="EditCommentTime" asp-controller="System" asp-route-id="@x.Id">编辑</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


