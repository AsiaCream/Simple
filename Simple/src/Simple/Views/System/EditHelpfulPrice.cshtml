@model HelpfulPrice
<style>
    .must2 {
        color: red;
    }

    .infolb {
        color: white;
    }
</style>
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">修改Helpful价格以及WishList价格</p>
                        <form id="defaultForm" asp-action="EditHelpfulPrice" asp-controller="System" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <table class="table table-responsive table-stripted">
                                <tbody>
                                    <tr>
                                        <th class="must2">*Helpful一单价格</th>
                                        <td class="form-group"><input type="text" class="form-control" name="price" value="@Model.Price" /></td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*WishLish价格</th>
                                        <td class="form-group"><input type="text" class="form-control" name="wishlistcost" value="@Model.WishListCost" /></td>
                                    </tr>
                                    <tr>
                                        <th><a asp-action="HelpfulPrice" asp-controller="System" class="btn btn-primary form-control">返回Helpful设置页面</a></th>
                                        <th><input type="submit" class="form-control btn btn-primary" value="确认修改"></th>
                                    </tr>
                                </tbody>
                            </table>

                        </form>
                        <label class="must2" style="color:gold;">特别说明</label><br />
                        <label class="must2">Helpful订单价格请勿随意修改，以免新老用户错乱！</label>     <br />
                        <div style="height:10px;"></div>
                    </div>
                </div>
            </section>
        </div>
    </section>

</div>
<script src="~/js/jQuery-2.1.4.min.js"></script>
<script>
    $(function () {
        $('#defaultForm').bootstrapValidator({
            message: '这个值没有被验证',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                price: {
                    message: '价格还没有验证',
                    validators: {
                        notEmpty: {
                            message: '价格不能为空'
                        },
                        greaterThan: {
                            value: 0,
                            message: '价格应大于0',
                            inclusive: false,
                        },
                        digits: {
                            message: '价格应为数字',

                        }
                    },
                    
                },
                wishlistcost: {
                    message: '价格还没有验证',
                    validators: {
                        notEmpty: {
                            message: '价格不能为空'
                        },
                        greaterThan: {
                            value: 0,
                            message: '价格应大于0',
                            inclusive: false,
                        },
                        digits: {
                            message: '价格应为数字',

                        }
                    },
                    
                },
               
            }
        })

    });
</script>