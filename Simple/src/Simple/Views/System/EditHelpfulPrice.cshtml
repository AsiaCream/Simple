@model HelpfulPrice
<style>
    .must2 {
        color: red;
    }

    .infolb {
        color: white;
    }
</style>
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">修改Helpful价格以及WishList价格</p>
                        <form asp-action="EditHelpfulPrice" asp-controller="System" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <table class="table table-responsive table-stripted">
                                <tbody>
                                    <tr>
                                        <th class="must2">*Helpful一单价格</th>
                                        <td><input type="text" class="form-control" name="price" value="@Model.Price" /></td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*WishLish价格</th>
                                        <td><input type="text" class="form-control" name="wishlistcost" value="@Model.WishListCost" /></td>
                                    </tr>
                                    <tr>
                                        <th><a asp-action="HelpfulPrice" asp-controller="System" class="btn btn-primary form-control">返回Helpful设置页面</a></th>
                                        <th><input type="submit" class="form-control btn btn-primary" value="确认修改"></th>
                                    </tr>
                                </tbody>
                            </table>

                        </form>
                        <label class="must2" style="color:gold;">特别说明</label><br />
                        <label class="must2">Helpful订单价格请勿随意修改，以免新老用户错乱！</label>     <br />
                        <div style="height:10px;"></div>
                    </div>
                </div>
            </section>
        </div>
    </section>

</div>