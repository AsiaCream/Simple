@model NextOrToday
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">隔天下单/首天下单类型修改</p>
                        <form asp-action="EditNextOrToday" asp-controller="System" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <table class="table table-responsive table-stripted">
                                <tbody>
                                    <tr>
                                        <th class="must2">*隔天下单/首天下单类型</th>
                                        <td><input type="text" class="form-control" name="type" value="@Model.Type" /></td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*该类型对应的价格</th>
                                        <td><input type="text" class="form-control" name="Price" value="@Model.Price" /></td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*说明</th>
                                        <td><input type="text" class="form-control" name="Note" value="@Model.Note" /></td>
                                    </tr>
                                    <tr>
                                        <th><a asp-action="NextOrToday" asp-controller="System" class="form-control btn btn-primary">返回隔天下单/首天下单类型列表</a></th>
                                        <th><input type="submit" class="form-control btn btn-primary" value="确认修改"></th>
                                    </tr>
                                </tbody>
                            </table>

                        </form>
                        <label class="must2" style="color:gold;">特别说明</label><br />
                        <label class="must2">隔天下单/首天下单类型请勿随意修改，以免新老用户错乱！</label>     <br />
                        <div style="height:10px;"></div>
                    </div>
                </div>
            </section>
        </div>
    </section>

</div>





