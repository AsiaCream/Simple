@model IEnumerable<HelpfulPreOrder>
@{
    Layout = null;
    //用户Helpful待审核页面
}
    @foreach (var x in Model)
    {
    <tr class="table-tr">
        <td>@x.Id</td>
        <td>@x.OrderNumber</td>
        <td>@x.Country</td>
        <td><a href="#" title="@x.Review1">查看</a></td>
        <td><a href="#" title="@x.Review2">查看</a></td>
        <td><a href="#" title="@x.Review3">查看</a></td>
        <td><a href="#" title="@x.Review4">查看</a></td>
        <td><a href="#" title="@x.Review5">查看</a></td>
        <td><a href="#" title="@x.Review6">查看</a></td>
        <td><a href="#" title="@x.Review7">查看</a></td>
        <td><a href="#" title="@x.Review8">查看</a></td>
        <td><a href="#" title="@x.Review9">查看</a></td>
        <td><a href="#" title="@x.Review10">查看</a></td>
        <td><a href="@x.Url" title="@x.Url" target="_blank">查看</a></td>
        <td>@x.HelpfulType</td>
        <td>@x.IsCollection</td>
        <td>@x.Draw</td>
        <td>@x.Times</td>
        <td><a asp-action="HelpfulOrderDetails" asp-controller="Manage" asp-route-id="@x.Id">查看详情</a>&nbsp;&nbsp;<a href="javascript:remove(@x.Id)">删除</a></td>
</tr>
    }
<script src="~/js/jQuery-2.1.4.min.js"></script>
<script type="text/javascript">
    function remove(id) {
        var jug = confirm("确认删除吗？");
        if (jug == true) {
            $(function () {
                var url = "/Manage/DeleteHelpfulOrder";
                var params = { "id": id };
                $.post(url, params, function (data) {
                    if (data == "success") {
                        $("#table-tr").remove();
                        alert("删除成功");
                    }
                    else {
                        alert("删除失败");
                    }
                });

            });

        }

    }
</script>


