@model IEnumerable<PreOrder>
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">待支付列表</p>
                        <input type="text" placeholder="系统订单号" class="input-lg" />
                        &nbsp;&nbsp;
                        <input type="text" placeholder="真实订单号" class="input-lg" />
                        <div style="height:20px;"></div>
                        <input type="text" placeholder="开始时间" class="input-lg" />
                        &nbsp;&nbsp;
                        <input type="text" placeholder="结束时间" class="input-lg" />&nbsp;&nbsp;
                        <input type="button" class="btn btn-primary" value="查询" />
                        <label class="text-danger">&nbsp;&nbsp;&nbsp;&nbsp;未操作（不含错单）：0  &nbsp;&nbsp;&nbsp;&nbsp; 错单：0</label>
                        <div style="height:20px;"></div>

                        
                            <input type="button" class="btn btn-success " value="在线支付" />
                        &nbsp;&nbsp;
                            <input type="button" class="btn btn-danger " value="批量删除" />
                            <div style="height:20px;"></div>
                    </div> 
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-responsive table-stripted table-hover" style="background-color:white;">
                            <thead>
                                <tr style="background-color:rgb(60,141,188);">
                                    <th>序号</th>
                                    <th>订单编号</th>
                                    <th>国家</th>
                                    <th>店铺名</th>
                                    <th>链接</th>
                                    <th>类型</th>
                                    <th>下单前天操作</th>
                                    <th>价格</th>
                                    <th>运费</th>
                                    <th>汇率</th>
                                    <th>总计</th>
                                    <th>RMB总计</th>
                                    <th>手续费</th>
                                    <th>支付金额</th>
                                    <th>FeedBack</th>
                                    <th>Review</th>
                                    <th>审核</th>
                                    <th>类型</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var x in Model)
                                    {
                                    <tr>
                                        <td>@x.Id</td>
                                        <td>@x.PreOrderNumber</td>
                                        <td>@x.Country</td>
                                        <td>@x.ShopName</td>
                                        <td><a href="@x.GoodsUrl" title="@x.GoodsUrl" target="_blank">查看</a></td>
                                        <td>@x.FindType</td>
                                        <td>@x.NextOrToday</td>
                                        <td>@x.GoodsCost</td>
                                        <td>@x.Freight</td>
                                        <td>@x.Rate</td>
                                        <td>@x.Total</td>
                                        <td>@x.RMB</td>
                                        <td>@x.Poundage</td>
                                        <td>@x.PayTotal</td>
                                        <td><a href="#" title="@x.FeedBackContent">复制</a></td>
                                        <td><a href="#" title="@x.ReviewContent">复制</a></td>
                                        <td>@x.Draw</td>
                                        <td>@x.PlatType</td>
                                        <td><a asp-action="EditOrder" asp-controller="Manage" asp-route-id="@x.Id">编辑</a>&nbsp;&nbsp;<a href="#">删除</a> </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                </div>
            </section>
        </div>
    </section>
</div>