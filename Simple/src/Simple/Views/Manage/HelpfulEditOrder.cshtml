@model HelpfulPreOrder
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">修改Helpful和收藏 </p><label class="must2">请认真填写以下信息 ，本操作价格为 @ViewBag.Price 元 1 单</label>
                        <form asp-action="EditHelpfulOrder" asp-controller="Manage" id="orderForm" method="post">
                            <input type="hidden" value="@Model.Id" name="id" />
                            <table class="table table-responsive table-stripted">
                                <tbody>
                                    <tr>
                                        <th class="must2">*国家</th>
                                        @foreach (Rate x in ViewBag.Country)
                                        {
                                            <td><input type="radio" name="Country" value="@x.Country" />@x.Country</td>
                                        }
                                        <td><input type="radio" name="Country" value="@Model.Country" checked="checked"/>@Model.Country</td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*链接</th>
                                        <td><input class="form-control" type="text"  name="Url" value="@Model.Url" /></td>
                                    </tr>
                                    <tr>
                                        <th class="must2">操作数量</th>
                                        <td><input type="text" class="form-control" name="Times" value="@Model.Times" /></td>
                                        <td class="must2">请输入本产品要刷的单数</td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*Review1标题</th>
                                        <td><input class="form-control" name="ReviewTitle1" value="@Model.Review1"/></td>
                                        <td><input type="radio" />一星</td>
                                        <td><input type="radio" />二星</td>
                                        <td><input type="radio" />三星</td>
                                        <td><input type="radio" />四星</td>
                                        <td><input type="radio" checked="checked" />五星</td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*Review2标题</th>
                                        <td><input class="form-control" name="ReviewTitle2" /></td>
                                        <td><input type="radio" />一星</td>
                                        <td><input type="radio" />二星</td>
                                        <td><input type="radio" />三星</td>
                                        <td><input type="radio" />四星</td>
                                        <td><input type="radio" checked="checked" />五星</td>
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th><a href="#" class="must2">新增加一个标题（一次最多提交十个标题）</a></th>
                                    </tr>
                                    <tr>
                                        <th class="must2">*Helpful类型</th>
                                        <td><input type="radio" name="AvoidWeekend" value="1" checked="checked" />YES</td>
                                        <td><input type="radio" name="AvoidWeekend" value="0" />No</td>
                                    </tr>
                                    <tr>
                                        <th class="must2">*是否收藏产品</th>
                                        <td><input type="radio" name="Collection" value="1" />YES</td>
                                        <td><input type="radio" name="Collection" value="0" checked="checked" />NO</td>
                                        <td class="infotitle">（Add to Wish List）功能单独收费 @ViewBag.WishListCost 元 </td>
                                    </tr>
                                    <tr>
                                        <td><input type="submit" id="send" class="form-control btn btn-primary" value="提交并添加下一单"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                    <div class="col-md-12">
                        <img src="~/img/system/HelpfurExample.jpg" class="caption" />

                    </div>
                </div>
            </section>
        </div>
    </section>

</div>
<script src="~/js/jQuery-2.1.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#set_feedback_review").click(function () {
            $(".feedback").fadeIn();
            $(".review").fadeIn();
        });
        $("#set_feedback").click(function () {
            $(".feedback").fadeIn();
            $(".review").fadeOut();
        });
        $("#set_review").click(function () {
            $(".feedback").fadeOut();
            $(".review").fadeIn();
        });
        $("#set_order").click(function () {
            $(".feedback").fadeOut();
            $(".review").fadeOut();
        });
        $("#send").click(function () {
            var url = "Manage/OneToOne";
            var params = {
                "Rate": $("#Rate").val(),
                "FindType": $("#FindType").val(),
                "GoodsUrl": $("#GoodsUrl").val(),
                "ShopName": $("#ShopName").val(),
                "GoodsCost": $("#GoodCost").val(),
                "Freight": $("#Freight").val(),
                "OrderType": $("input[type='radio' name='OrderType']").val(),
                "NextOrToday": $("input[type='checkbox' name='NextOrToday']").val(),
                "AvoidWeekend": $("input[type='radio' name='AvoidWeekend']").val(),
                "Extension": $("input[type='radio' name='Extension']").val(),



            }
            $.post(url, params, function (data) {
                if (data == "success") {
                    alert("提交成功");
                    window.location.href = "/Manage/OneToOne";
                }
                else {
                    alert("提交失败");
                }

            });
        });
    });
</script>



