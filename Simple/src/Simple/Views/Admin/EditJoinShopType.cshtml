@model FindType
<style>
    .must2 {
        color: red;
    }

    .infolb {
        color: white;
    }
</style>
<div>
    <section>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">进入店铺方式修改</p>
                        <form asp-action="EditJoinShopType" asp-controller="Admin" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <table class="table table-responsive table-stripted" style="background-color:white;">
                                <tbody>
                                    <tr>
                                        <th class="must2">*进入店铺方式</th>
                                        <td><input type="text" class="form-control" name="type" value="@Model.Type" /></td>
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th><input type="submit" class="form-control btn btn-primary" value="确认修改"></th>
                                    </tr>
                                </tbody>
                            </table>

                        </form>
                        <label class="must2" style="color:gold;">特别说明</label><br />
                        <label class="must2">进入店铺方式请勿随意修改，以免新老用户错乱！</label>     <br />
                        <div style="height:10px;"></div>
                    </div>
                </div>
            </section>
        </div>
    </section>

</div>




