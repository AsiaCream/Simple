<div>  
    <section> 
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">helpful待审核订单</p>
                        <p class="must2">如想快速审核其它订单，可以点击<a asp-action="PreOrder" asp-controller="Admin">此处</a>跳转</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-responsive table-stripted table-hover" style="background-color:white;">
                            <thead>
                                <tr style="background-color:rgb(60,141,188);">
                                    <th>序号</th>
                                    <th>订单编号</th>
                                    <th>国家</th>
                                    <th>标题</th>
                                    <th>链接</th>
                                    <th>Helpful类型</th>
                                    <th>是否收藏(Add to Wish List)</th>
                                    <th>审核状态</th>
                                    <th>单数</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="order-list"></tbody>
                        </table>
                        <p>
                            <button id="btn-prev" class="btn btn-primary">上一页</button>
                            <button id="btn-next" class="btn btn-primary">下一页</button>
                        </p>
                    </div>

                </div>
            </section>
        </div>
    </section>
</div>


<script src="~/js/jQuery-2.1.4.min.js"></script>
<script>
    var p = 0;
    var totalRecord=@ViewBag.totalRecord;
    var totalPage=(totalRecord+10-1)/10;
    function load() {
        $.get("/Pager/LoadHelpfulDrawOrders", {
            page:p
        }, function (html) {
            $("#order-list").html(html);

        });
    }
    $("#btn-prev").click(function () {
        p--;
        if (p < 0)
            p = 0;
        load();
    });
    $("#btn-next").click(function () {
        p++;
        if (p >1)
            p = 0;
            load();
    });
    $(document).ready(function () {
        load();
    });
</script>