<div>
    <section><!--管理员查看待支付列表-->
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-md-12" id="order-search">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="infotitle">待支付列表</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-responsive table-stripted table-hover" style="background-color:white;">
                            <thead>
                                <tr class="table-title">
                                    <th>序号</th>
                                    <th>订单编号</th>
                                    <th>国</th>
                                    <th>店铺</th>
                                    <th>链接</th>
                                    <th>类型</th>
                                    <th>下单前天</th>
                                    <th>价格</th>
                                    <th>运费</th>
                                    <th>汇率</th>
                                    <th>总计</th>
                                    <th>RMB总计</th>
                                    <th>手续费</th>
                                    <th>需支付</th>
                                    <th>FeedBack</th>
                                    <th>Review</th>
                                    <th>审核</th>
                                    <th>平台</th>
                                    <th>单数</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody id="order-list"></tbody>
                        </table>
                        <p>
                            <button id="btn-prev" class="btn btn-primary">上一页</button>
                            <button id="btn-next" class="btn btn-primary">下一页</button>
                        </p>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>

<script src="~/js/jQuery-2.1.4.min.js"></script>
<script>
    var p = 0;
    var totalRecord=@ViewBag.totalRecord;
    var totalPage=(totalRecord+10-1)/10;
    function load() {
        $.get("/Pager/LoadWaitPayOrders", {
            page:p
        }, function (html) {
            $("#order-list").html(html);

        });

    }
    $("#btn-prev").click(function () {
        p--;
        if (p < 0)
            p = 0;
        load();
    });
    $("#btn-next").click(function () {
        p++;
        if (p >totalPage-1)
            p = 0;
            load();
    });
    $(document).ready(function () {
        load();
    });
</script>
