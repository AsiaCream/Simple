@model IEnumerable<LockOrder>
@{
    Layout = null;
    //Admin搜索结果
}
<p>Ebay搜索结果如下所示：</p>
<table class="table table-hover">
    <tr style="background-color:rgb(60,141,188);">
        <th>序号</th>
        <th>订单编号</th>
        <th>国家</th>
        <th>店铺名</th>
        <th>链接</th>
        <th>地址</th>
        <th>类型</th>
        <th>隔天下单/首天</th>
        <th>价格</th>
        <th>运费</th>
        <th>总计</th>
        <th>RMB总计</th>
        <th>手续费</th>
        <th>支付金额</th>
        <th>Amazon单号</th>
        <th>FeedBack</th>
        <th>Review</th>
        <th>是否审核</th>
        <th>单数</th>
        <th>操作</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr id="table-tr-@x.Id">
            <td>@x.PreOrder.Id</td>
            <td>@x.PreOrder.PreOrderNumber</td>
            <td>@x.PreOrder.Country</td>
            <td>@x.PreOrder.ShopName</td>
            <td><a href="@x.PreOrder.GoodsUrl" title="@x.PreOrder.GoodsUrl" target="_blank">查看</a></td>
            <td><a href="#" title="@x.PreOrder.Address">查看</a></td>
            <td>@x.PreOrder.OrderType</td>
            <td>@x.PreOrder.NextOrToday</td>
            <td>@x.PreOrder.GoodsCost</td>
            <td>@x.PreOrder.Freight</td>
            <td>@x.PreOrder.Total</td>
            <td>@x.PreOrder.RMB</td>
            <td>@x.PreOrder.Poundage</td>
            <td>@x.PreOrder.PayTotal</td>
            <td>@x.PreOrder.TrueOrderNumber</td>
            <td><a href="#" title="@x.PreOrder.FeedBackContent" id="fb_text">复制</a></td>
            <td><a href="#" title="@x.PreOrder.ReviewContent" id="rew_text">复制</a></td>
            <td>@x.PreOrder.Draw</td>
            <td>@x.PreOrder.Times</td>
            <td><a asp-action="OrderDetails" asp-controller="Admin" asp-route-id="@x.PreOrder.Id" class="btn btn-primary">详细</a> </td>
        </tr>
    }
</table>

@if (ViewBag.HelpfulOrder != null)
{
    <p>Helpful订单搜索如下所示</p>
    <table class="table table-responsive table-stripted table-hover" style="background-color:white;">
        <thead>
            <tr style="background-color:rgb(60,141,188);">
                <th>序号</th>
                <th>订单编号</th>
                <th>发布时间</th>
                <th>国家</th>
                <th>Review标题</th>
                <th>链接</th>
                <th>类型</th>
                <th>是否收藏(Add to Wish List)</th>
                <th>是否审核</th>
                <th>审核时间</th>
                <th>单数</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr id="table-htr-@ViewBag.HelpfulOrder.HelpfulPreOrder.Id">
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.Id</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.OrderNumber</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.PostTime</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.Country</td>
                <td><a href="#">查看</a></td>
                <td><a href="#">查看</a></td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.HelpfulType</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.IsCollection</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.Draw</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.DrawTime</td>
                <td>@ViewBag.HelpfulOrder.HelpfulPreOrder.Times</td>
                <td><a asp-action="HelpfulDetails" asp-controller="Admin" asp-route-id="@ViewBag.HelpfulOrder.HelpfulPreOrder.Id">详细</a></td>
            </tr>
        </tbody>
    </table>
}


