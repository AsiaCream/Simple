@model User
@{
    Layout = null;
}
<input type="hidden" id="resetusername" value="@Model.UserName" />
<div class="form-group">
    <input type="password" class="form-control" placeholder="请输入新密码" id="newpwd" name="newpwd" />
</div>
<div class="form-group">
    <input type="password" class="form-control" placeholder="请再次请输入密码" id="confirmpwd" name="newpwd" />
</div>
<div class="form-group">
    <input type="button" class="btn btn-success form-control" id="resetsend" value="确定找回" />
</div>

<script type="text/javascript">
    $("#resetsend").click(function () {
        $.post("/Account/ResetPassword", { resetusername: $("#resetusername").val(), newpwd: $("#newpwd").val() }, function (data) {
            if (data == "success") {
                alert("密码重置成功，请使用新密码登录");
                window.location.href = "/Account/Login";
            }
            else if (data == "error") {
                alert("密码找回失败");
            }
            else {
                alert("未知错误");
            }
        });
    });
</script>